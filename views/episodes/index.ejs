<%- include('../partials/header') %>

<div class="container center">
    <div class="container row text-center">
        <% episodes.forEach(function(e) {%>
            <div class="card mt-3 me-3 episodeCard">
                <div class="card-body">
                    <h5 class="card-title"><%= e.name %></h5>
                    <a href="/episodes/<%= e.id %>" class="btn">Learn More</a>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<div class="text-center mt-3">
    <% if (page > 1) { %>
        <a href="/episodes/all/<%= page - 1 %>" class="btn btn-primary me-2">Previous</a>
    <% } %>
    <% if (episodes.length >= pageSize) { %>
        <a href="/episodes/all/<%= parseInt(page) + 1 %>" class="btn btn-primary">Next</a>
    <% } %>
    </div>
</div>

<%- include('../partials/footer') %>